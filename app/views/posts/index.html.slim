= form_with(scope: :query, url: turbo_posts_path,
                           method: :get,
                           data: { turbo_stream: true,
                                   controller: "search" }) do |f|
  = f.select :region, options_for_select([["", ""]].concat(Region.pluck(:name, :id))),{}, data: { action: "change->search#execute"}
  = f.select :author, options_for_select([["", ""]].concat(User.pluck(:email, :id))),{}, data: { action: "change->search#execute"}
  = f.date_field :date, data: { action: "change->search#execute" }

= turbo_frame_tag "post-wrapper" do
  = render "posts", posts: posts
